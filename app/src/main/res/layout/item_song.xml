<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_locker_album_cover_img_cv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp" >

        <ImageView
            android:id="@+id/item_locker_album_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_locker_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="라일락(LILAC)"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/item_locker_album_cover_img_cv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_locker_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="아이유(IU)"
        android:textColor="#747474"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/item_locker_album_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_locker_album_title_tv"/>

    <ImageView
        android:id="@+id/item_locker_album_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_locker_album_play_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintEnd_toStartOf="@id/item_locker_album_more_iv"
        app:layout_constraintTop_toTopOf="@id/item_locker_album_more_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>