<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/video_exp_nsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/video_exp_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/video_spinner_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/video_spinner_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최신순"
                    android:textColor="#747474"
                    android:textSize="13sp" />


                <ImageView
                    android:id="@+id/video_spinner_iv"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/btn_spinner" />

            </LinearLayout>


            <ImageView
                android:id="@+id/video_exp_01"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/album_video_exp_02"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/video_spinner_layout" />

            <TextView
                android:id="@+id/video_exp_title_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="[MV] Coin"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/video_exp_01"
                app:layout_constraintTop_toBottomOf="@id/video_exp_01" />

            <TextView
                android:id="@+id/video_exp_info_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="아이유(IU) | 2021.03.26"
                android:textColor="#747474"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/video_exp_01"
                app:layout_constraintTop_toBottomOf="@id/video_exp_title_01" />



            <ImageView
                android:id="@+id/video_exp_02"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/album_video_exp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/video_exp_info_01" />

            <TextView
                android:id="@+id/video_exp_title_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="[티저] 에필로그"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/video_exp_02"
                app:layout_constraintTop_toBottomOf="@id/video_exp_02" />

            <TextView
                android:id="@+id/video_exp_info_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="아이유(IU) | 2021.03.19"
                android:textColor="#747474"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/video_exp_02"
                app:layout_constraintTop_toBottomOf="@id/video_exp_title_02" />




            <ImageView
                android:id="@+id/video_exp_03"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/album_video_exp_03"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/video_exp_info_02" />

            <TextView
                android:id="@+id/video_exp_title_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="[MV] Celebrity"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/video_exp_03"
                app:layout_constraintTop_toBottomOf="@id/video_exp_03" />

            <TextView
                android:id="@+id/video_exp_info_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="아이유(IU) | 2021.01.27"
                android:textColor="#747474"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/video_exp_03"
                app:layout_constraintTop_toBottomOf="@id/video_exp_title_03" />



            <ImageView
                android:id="@+id/video_exp_04"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/album_video_exp_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/video_exp_info_03" />

            <TextView
                android:id="@+id/video_exp_title_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="[MV] 라일락 (LILAC)"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/video_exp_04"
                app:layout_constraintTop_toBottomOf="@id/video_exp_04" />

            <TextView
                android:id="@+id/video_exp_info_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="아이유(IU) | 2021.03.25"
                android:textColor="#747474"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/video_exp_04"
                app:layout_constraintTop_toBottomOf="@id/video_exp_title_04" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>